@using efcoreApp.Data
@model Ogretmen
<h2>Öğretmen Güncelle</h2>
<hr>
<div class="row">
    <div class="col-8">
        <form asp-asp-controller="Ogretmen" asp-action="Edit" method="post">
            <input type="hidden" asp-for="OgretmenId">
            <div class="mb-3">
                <label asp-for="Ad" class="form-label">Öğrenci Ad</label>
                <input asp-for="Ad" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="SoyAd" class="form-label">Öğrenci Soyad</label>
                <input asp-for="SoyAd" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Eposta" class="form-label">Eposta</label>
                <input asp-for="Eposta" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Telefon" class="form-label">Telefon</label>
                <input asp-for="Telefon" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="BaslamaTarihi" class="form-label">Başlama tarihi</label>
                <input asp-for="BaslamaTarihi" class="form-control">
            </div>
            <button type="submit" class="btn btn-secondary">Kaydet</button>
        </form>
    </div>
    <div class="col-4">
    <h4>Kurslar</h4>
    <hr>
    <ul>
    @foreach(var item in @Model.Kurslar)
    {
        <li>@item.Baslik</li>
    }
    </ul>
    </div>
</div>