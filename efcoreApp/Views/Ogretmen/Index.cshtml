@model IEnumerable<Ogretmen>
<h2>Öğretmen Listesi</h2>
<a href="/Ogretmen/Create" class="btn btn-primary">Öğretmen Ekle</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 150px;">@Html.DisplayNameFor(m => m.OgretmenId)</th>
            <th>@Html.DisplayNameFor(m => m.Ad)</th>
            <th>@Html.DisplayNameFor(m => m.SoyAd)</th>
            <th>@Html.DisplayNameFor(m => m.Eposta)</th>
            <th>@Html.DisplayNameFor(m => m.Telefon)</th>
            <th>@Html.DisplayNameFor(m => m.BaslamaTarihi)</th>
            <th style="width: 150px;"></th>
        </tr>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem =>item.OgretmenId)</td>
            <td>@Html.DisplayFor(modelItem =>item.Ad)</td>
            <td>@Html.DisplayFor(modelItem =>item.SoyAd)</td>
            <td>@Html.DisplayFor(modelItem =>item.Eposta)</td>
            <td>@Html.DisplayFor(modelItem =>item.Telefon)</td>
            <td>@Html.DisplayFor(modelItem =>item.BaslamaTarihi)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OgretmenId" class="btn btn-primary btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.OgretmenId" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
        }
    </tbody>
    </thead>


</table>